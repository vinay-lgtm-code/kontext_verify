{
  "name": "@kontext-sdk/cli",
  "version": "0.6.0",
  "description": "Compliance audit trail CLI for AI agents making stablecoin payments. OFAC screening, digest chains, compliance certificates.",
  "bin": {
    "kontext": "./dist/cli.js"
  },
  "main": "./dist/cli.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && node -e \"const fs=require('fs');const f='dist/cli.js';const c=fs.readFileSync(f,'utf8');if(!c.startsWith('#!')){fs.writeFileSync(f,'#!/usr/bin/env node\\n'+c)}\"",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "kontext",
    "compliance",
    "cli",
    "usdc",
    "ofac",
    "stablecoin",
    "agent",
    "audit-trail",
    "genius-act",
    "mcp"
  ],
  "author": "Legaci Labs Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://www.github.com/legaci-labs/kontext",
    "directory": "packages/cli"
  },
  "homepage": "https://getkontext.com",
  "bugs": {
    "url": "https://www.github.com/legaci-labs/kontext/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "kontext-sdk": "workspace:*"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": ">=1.0.0",
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@modelcontextprotocol/sdk": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.12.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
