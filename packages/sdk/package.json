{
  "name": "kontext-sdk",
  "version": "0.5.2",
  "description": "Compliance audit trail CLI and SDK for AI agents making stablecoin payments on Base. Tamper-evident digest chains, OFAC screening, compliance certificates. x402 + Circle Programmable Wallets.",
  "bin": {
    "kontext": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup && node -e \"const fs=require('fs');const f='dist/cli.js';const c=fs.readFileSync(f,'utf8');if(!c.startsWith('#!')){fs.writeFileSync(f,'#!/usr/bin/env node\\n'+c)}\"",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "kontext",
    "compliance",
    "cli",
    "usdc",
    "stablecoin",
    "agent",
    "trust",
    "audit-trail",
    "genius-act",
    "travel-rule",
    "ai-agent",
    "digest-chain",
    "anomaly-detection",
    "agentic",
    "x402",
    "base",
    "circle"
  ],
  "author": "Legaci Labs Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://www.github.com/legaci-labs/kontext"
  },
  "homepage": "https://getkontext.com",
  "bugs": {
    "url": "https://www.github.com/legaci-labs/kontext/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.12.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.0"
  }
}
