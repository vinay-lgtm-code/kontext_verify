{
  "name": "kontext-sdk",
  "version": "0.1.0",
  "description": "Trust and compliance layer for agentic crypto workflows. Provides action logging, audit trails, trust scoring, anomaly detection, USDC compliance, and CCTP cross-chain transfer tracking.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "kontext",
    "compliance",
    "crypto",
    "usdc",
    "stablecoin",
    "agent",
    "trust",
    "audit",
    "genius-act",
    "cctp",
    "cross-chain",
    "anomaly-detection",
    "agentic",
    "web3"
  ],
  "author": "Kontext Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vinay-lgtm-code/kontext_verify"
  },
  "homepage": "https://getkontext.com",
  "bugs": {
    "url": "https://github.com/vinay-lgtm-code/kontext_verify/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
